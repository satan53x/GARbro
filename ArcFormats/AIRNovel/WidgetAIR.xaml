<Grid x:Class="GameRes.Formats.GUI.WidgetAIR"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:s="clr-namespace:GameRes.Formats.Strings"
      Width="300" >
    <StackPanel Margin="10">
        <DockPanel Height="30">
            <TextBlock Text="Game" DockPanel.Dock="Left" Width="40"
                       VerticalAlignment="Center" Margin="0,0,5,5"/>
            <ComboBox x:Name="KeyComboBox" 
                     SelectionChanged="KeyComboBox_SelectionChanged"
                     HorizontalAlignment="Stretch" Margin="0,0,0,5" 
                      VerticalContentAlignment="Center"/>
        </DockPanel>

        <DockPanel Height="26">
            <TextBlock Text="Pass" DockPanel.Dock="Left" Width="40"
                       VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="ValueTextBox" IsReadOnly="False" Height="26"
                    HorizontalAlignment="Stretch" 
                     VerticalContentAlignment="Center"/>
        </DockPanel>
    </StackPanel>
</Grid>